{% if inventory_hostname in groups['collectd'] or
      (inventory_hostname in groups['nova_compute'] and
       nova_virt_type | default('qemu') in ['kvm', 'qemu']) %}

[[inputs.socket_listener]]
  service_address = "udp://127.0.0.1:25826"
  name_prefix = ""
  data_format = "collectd"
  collectd_security_level = "none"
  collectd_typesdb = "{{ collectd_types_db_path }}"
{% endif %}


{% if inventory_hostname in groups['ceph-mon'] %}
[[inputs.socket_listener]]
  service_address = "udp://127.0.0.1:8094"
  data_format = "influx"
{% endif %}
